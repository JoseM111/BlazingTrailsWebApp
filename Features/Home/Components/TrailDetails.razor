@* @page "/" *@
@* ⚫️⚫️☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰  HTML  ☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰ *@

<div class="drawer-wrapper @(_isOpen ? "slide" : "")" >
	<div class="drawer-mask" />
	<div class="drawer" >
		@if (TrailDetail != null) {
			<div class="drawer-content" >
				<div class="trail-image" >
					<img 
						src="@TrailDetail.Image"
						alt="@TrailDetail.Name" 
						style="max-width: 40rem;"
						/>
				</div>
				<div class="trail-details" >
					<h3>@TrailDetail.Name</h3>
					<h6 class="mb-3 text-muted" >
						<span class="oi oi-map-marker" />
						@TrailDetail.Location
					</h6>
					<div class="mt-4" >
						<span class="mr-5" >
							<span class="oi oi-clock mr-2" />
							 @TrailDetail.Time
						</span>
						<span>
							<span class="oi oi-infinity mr-2" />
							 @TrailDetail.Length km
						</span>
					</div>
					<p 
						class="mt-4" 
						>
						@TrailDetail.Description
					</p>
				</div>
			</div>
			<div class="drawer-controls" >
				<button
					class="btn btn-secondary"
					@onclick="@(() => _isOpen = false)" >
					Close
				</button>
			</div>
		}
	</div>
</div>


@* ⚫️⚫️☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰  C#  ☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰ *@
@code {
#nullable enable
	//☰☰☰☰☰☰☰☰☰☰
	#region - ™PROPERTIES™ ☰☰☰☰☰☰☰☰☰
	private bool _isOpen;
	[Parameter] public TrailModel? TrailDetail { get; set; }
	#endregion ™☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰☰

	/**  ☰☰☰☰☰☰☰☰| Functions |☰☰☰☰☰☰☰☰☰  */
	/*-|
	 Method invoked when the component has received parameters
	 from its parent in the render tree, and the incoming values
	 have been assigned to properties.
	|-*/
		protected override void OnParametersSet() {
	//☰☰☰☰☰☰☰☰☰☰
		if (TrailDetail != null) _isOpen = true;

		WriteLine($"Is open?: {_isOpen}");
	}

}
